@page
@model PetConnect.Pages_Pets.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Pet</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Pet.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pet.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Pet.Age)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pet.Age)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Pet.Species)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pet.Species)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Pet.Breed)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pet.Breed)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Pet.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pet.Description)
        </dd>
        <!-- Displaying Shelter details if it exists -->
        @if (Model.Pet.Shelters != null)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Pet.Shelters.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Pet.Shelters.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Pet.Shelters.Location)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Pet.Shelters.Location)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Pet.Shelters.ContactInfo)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Pet.Shelters.ContactInfo)
            </dd>
        }
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Pet.PetId">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
